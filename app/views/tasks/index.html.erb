<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Description</th>
      <th>Due date</th>
      <th>Is complete</th>
      <th>User ID</th>
      <th>Username</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.category %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= task.is_complete %></td>
        <td><%= task.user_id %></td>
        
        <% if User.exists?(task.user_id) %>
          <td><%= User.find(task.user_id).username %></td>          
        <% else %>
          <td>USER_DELETED</td>
        <% end %>
        
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

