<h1> Hello, Administrator <%= current_user.username %>. </h1>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
<thead>
    <tr>
    <th>ID</th>
    <th>Username</th>
    <th>created_at</th>
    <th>Is Admin?</th>
    <th>Destroy</th>
    </tr>
</thead>

<tbody>
    <% @users.each do |u| %>
    <tr>
        <td><%= u.id %></td>
        <td><%= u.username %></td>
        <td><%= u.created_at %></td>
        <td><%= u.is_admin %></td>
        <td><%= link_to 'Destroy', u, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>
    </tr>
    <% end %>
</tbody>
</table>

<br>

